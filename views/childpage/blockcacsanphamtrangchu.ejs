	</div>
</div>
<script>
	var productList = {
		'thi_cong': [{
			description: 'Thi công các công trình cơ điện',
			imageUrl: 'image/slide/thicong.jpg'
		}],
		'phan_phoi_wavin': [{
			description: 'Ống cấp nước PPR Wavin Ekoplastik',
			imageUrl: 'image/slide/cap_nuoc_PPR_Wa_vin_Ekoplastik.jpg',
			pdfUrl:'pdf/ekoplastik.pdf'
		},{
			description: 'Ống cấp nước PPR Wavin Pilsa',
			imageUrl: 'image/slide/Cap_nuoc_PPR_Wavin_Pilsa.jpg',
			pdfUrl:'pdf/PilsaPPR.pdf'
		},{
			description: 'Ống thoát nước giảm âm Wavin AS',
			imageUrl: 'image/slide/Thoat_nuoc_giảm_âm_Wavin_AS.png',
			pdfUrl:'pdf/WavinASProduct.pdf'
		}],
		'day_thiet_bi_dien': [{
			description: 'Dây, cáp điện',
			imageUrl: 'image/slide/day_cap_dien.jpg',
		},{
			description: 'Thiết bị điện Panasonic',
			imageUrl: 'image/slide/panasonic.jpg',
		},{
			description: 'Thiết bị điện Schneider',
			imageUrl: 'image/slide/schneider.jpg',
		}]
	}
	function clickSanpham(index){
		var productNames = productList[index];
		var htmlStr = "";
		var imageSlide = "";
		for (var i in productNames) {
			htmlStr += '<span id="" onclick="openImage(' + "'" + productNames[i].imageUrl+ "','" + productNames[i].pdfUrl + "')" + '"">' + productNames[i].description + '</span>'
			console.log(htmlStr)
			imageSlide += productNames[i].image;
		}
		$("#productDescription").html(htmlStr);
		
		clearCrrClass();
		$('#' + index).addClass('current');
	}

	function clearCrrClass(){
		for (var id in productList) {
			$('#' +  id).removeClass('current');
		} 
	}

	function openImage(image , pdf){
		console.log(image)
		$('#slide').stop();
		var htmlStr = "";
		if (pdf) {
			htmlStr = "<image style='width: 100%' onclick='window.open(" + '"' + pdf + '"' + ")' src='" + image + "'/>"
		} else {
			htmlStr = "<image style='width: 100%' src='" + image + "'/>"
		}
		$("#slides").html(htmlStr)
	}


</script>